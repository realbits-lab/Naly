# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/naly_db

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:4000
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Vercel AI Gateway (optional, replaces direct provider API keys)
AI_GATEWAY_API_KEY=your-vercel-ai-gateway-key

# Upstash Redis for Rate Limiting (KV or standard format)
KV_REST_API_URL=https://your-redis-instance.upstash.io
KV_REST_API_TOKEN=your-upstash-redis-token
# Alternative naming (both work):
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token

# API Configuration
API_BASE_URL=http://localhost:4000/api/v1
API_KEY_SALT=your-random-salt-for-api-keys

# Email Configuration (optional)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-email-password
EMAIL_FROM=noreply@naly.com

# Application Settings
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:4000

# Feature Flags
ENABLE_API_KEYS=true
ENABLE_RATE_LIMITING=true
ENABLE_WEBHOOKS=false

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn
VERCEL_ENV=development

# External APIs (optional)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
POLYGON_API_KEY=your-polygon-api-key
FINANCIAL_DATASETS_API_KEY=your-financial-datasets-api-key

# Storage (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=naly-assets